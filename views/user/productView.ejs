          showConfirmButton: false,
          timer: 3000,
          timerProgressBar: true,
          didOpen: (toast) => {
            toast.onmouseenter = Swal.stopTimer;
            toast.onmouseleave = Swal.resumeTimer;
          }
        });
        Toast.fire({
          icon: "success",
          title: "Already added"
        });
                        }

                    },
                    error: function (error) {
                        // Handle the error
                        console.error('Error:', error);
                    }
                });
            }
        });
