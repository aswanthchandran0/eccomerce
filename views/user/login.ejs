<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="shortcut icon" href="/images/mainLogo.png" />
    <title>Login - Lexxive</title>
    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            background-image: url('https://images.unsplash.com/photo-1523381210434-271e8be1f52b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            background-blend-mode: overlay;
            background-color: rgba(255, 255, 255, 0.9);
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255, 182, 193, 0.1), rgba(216, 191, 216, 0.1));
            z-index: -1;
        }

        .container {
            width: 100%;
            max-width: 420px;
            margin: 0 auto;
            animation: fadeIn 0.8s ease;
        }

        /* Login Card */
        .login-card {
            background: white;
            border-radius: 20px;
            padding: 40px 35px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .login-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #ff6b6b, #ff8e53, #ff6b6b);
            background-size: 200% 100%;
            animation: shimmer 2s infinite linear;
        }

        /* Brand Header */
        .brand-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            margin-bottom: 15px;
            color: white;
            font-size: 24px;
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        }

        .brand-header h1 {
            color: #333;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 5px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .brand-header p {
            color: #666;
            font-size: 14px;
            font-weight: 400;
        }

        /* Form Styles */
        .sign-in-form {
            width: 100%;
        }

        .title {
            text-align: center;
            color: #444;
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 25px;
        }

        /* Input Fields */
        .input-group {
            margin-bottom: 22px;
            position: relative;
        }

        .input-label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-size: 14px;
            font-weight: 500;
        }

        .input-field {
            position: relative;
            width: 100%;
        }

        .input-field i {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
            font-size: 18px;
            transition: all 0.3s ease;
        }

        .input-field input {
            width: 100%;
            padding: 16px 20px 16px 50px;
            border: 2px solid #e1e5e9;
            border-radius: 12px;
            font-size: 15px;
            color: #333;
            background: #f8f9fa;
            transition: all 0.3s ease;
            outline: none;
        }

        .input-field input:focus {
            border-color: #667eea;
            background: white;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.1);
        }

        .input-field input:focus + i {
            color: #764ba2;
            transform: translateY(-50%) scale(1.1);
        }

        .input-field input.error {
            border-color: #ff6b6b;
            background: #fff5f5;
        }

        .input-field input.error::placeholder {
            color: #ff6b6b;
        }

        /* Error Message */
        .error-message {
            background: linear-gradient(135deg, #ff6b6b, #ff8e53);
            color: white;
            padding: 12px 16px;
            border-radius: 10px;
            margin: 15px 0;
            font-size: 14px;
            text-align: center;
            animation: slideDown 0.3s ease;
            box-shadow: 0 5px 15px rgba(255, 107, 107, 0.2);
        }

        .error-message i {
            margin-right: 8px;
        }

        /* Forgot Password */
        .forgot-password {
            display: block;
            text-align: right;
            color: #667eea;
            text-decoration: none;
            font-size: 14px;
            margin: 10px 0 25px;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .forgot-password:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        /* Submit Button */
        .btn {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
            position: relative;
            overflow: hidden;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 25px rgba(102, 126, 234, 0.4);
        }

        .btn:active {
            transform: translateY(0);
        }

        .btn::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .btn:hover::after {
            left: 100%;
        }

        /* Signup Link */
        .signup-link {
            text-align: center;
            margin-top: 25px;
            color: #666;
            font-size: 15px;
        }

        .signup-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
        }

        .signup-link a:hover {
            color: #764ba2;
        }

        .signup-link a::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background: #764ba2;
            transition: width 0.3s ease;
        }

        .signup-link a:hover::after {
            width: 100%;
        }

        /* Home Link */
        .home-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }

        .home-link a {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #555;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            padding: 8px 16px;
            border-radius: 8px;
        }

        .home-link a:hover {
            background: #f8f9fa;
            color: #667eea;
        }

        /* Social Login */
        .social-login {
            margin-top: 25px;
            text-align: center;
        }

        .social-divider {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .social-divider span {
            padding: 0 15px;
            color: #888;
            font-size: 14px;
        }

        .social-divider::before,
        .social-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e1e5e9;
        }

        .social-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
        }

        .social-btn {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            border: 1px solid #e1e5e9;
            background: white;
            color: #555;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .social-btn.google:hover {
            color: #DB4437;
            border-color: #DB4437;
        }

        .social-btn.facebook:hover {
            color: #4267B2;
            border-color: #4267B2;
        }

        .social-btn.twitter:hover {
            color: #1DA1F2;
            border-color: #1DA1F2;
        }

        /* Animations */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes shimmer {
            0% {
                background-position: -200% 0;
            }
            100% {
                background-position: 200% 0;
            }
        }

        /* Responsive Design */
        @media (max-width: 480px) {
            .container {
                max-width: 100%;
                padding: 0 15px;
            }

            .login-card {
                padding: 30px 25px;
            }

            .brand-header h1 {
                font-size: 24px;
            }

            .input-field input {
                padding: 14px 18px 14px 45px;
            }

            .social-buttons {
                flex-wrap: wrap;
            }
        }

        /* Password Toggle */
        .password-toggle {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #999;
            cursor: pointer;
            font-size: 16px;
            transition: color 0.3s ease;
        }

        .password-toggle:hover {
            color: #667eea;
        }

        /* Loading State */
        .btn.loading {
            pointer-events: none;
            opacity: 0.8;
        }

        .btn.loading::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 20px;
            height: 20px;
            border: 2px solid white;
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
            to {
                transform: translate(-50%, -50%) rotate(360deg);
            }
        }

        /* Additional Features */
        .remember-me {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .remember-me input {
            margin-right: 10px;
            accent-color: #667eea;
        }

        .remember-me label {
            color: #555;
            font-size: 14px;
            cursor: pointer;
        }

        /* Decorative Elements */
        .floating-element {
            position: absolute;
            z-index: -1;
            opacity: 0.1;
            pointer-events: none;
        }

        .circle-1 {
            width: 200px;
            height: 200px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            top: -50px;
            right: -50px;
        }

        .circle-2 {
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, #ff6b6b, #ff8e53);
            border-radius: 50%;
            bottom: -50px;
            left: -50px;
        }
    </style>
</head>

<body>
    <!-- Decorative Elements -->
    <div class="floating-element circle-1"></div>
    <div class="floating-element circle-2"></div>

    <div class="container">
        <div class="login-card">
            <!-- Brand Header -->
            <div class="brand-header">
                <div class="logo">
                    <i class="fas fa-tshirt"></i>
                </div>
                <h1>Lexxive</h1>
                <p>Find your perfect style with us</p>
            </div>

            <!-- Login Form -->
            <form action="/login" method="post" class="sign-in-form" id="loginForm">
                <h2 class="title">Welcome Back</h2>
                
                <!-- Error Messages -->
                <% if (errors && errors.login) { %>
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= errors.login %>
                    </div>
                <% } %>

                <!-- Email Field -->
                <div class="input-group">
                    <label class="input-label">Email Address</label>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="text" 
                               name="Email" 
                               placeholder="Enter your email address"
                               value="<%= (formData && formData.Email) || '' %>"
                               autocomplete="email"
                               required>
                    </div>
                </div>

                <!-- Password Field -->
                <div class="input-group">
                    <label class="input-label">Password</label>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" 
                               name="Password" 
                               id="passwordInput"
                               placeholder="Enter your password"
                               autocomplete="current-password"
                               required>
                        <button type="button" class="password-toggle" id="passwordToggle">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <!--  Forgot Password -->
              
                <a href="/emailverification" class="forgot-password">
                    <i class="fas fa-key"></i> Forgot your password?
                </a>

                <!-- Submit Button -->
                <button type="submit" class="btn" id="submitBtn">
                    Sign In
                </button>

                <!-- Signup Link -->
                <div class="signup-link">
                    Don't have an account? 
                    <a href="/signup" id="sign-up-link">Create Account</a>
                </div>

                
                <!-- Home Link -->
                <div class="home-link">
                    <a href="/">
                        <i class="fas fa-home"></i>
                        Back to Home
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Password toggle functionality
            const passwordToggle = document.getElementById('passwordToggle');
            const passwordInput = document.getElementById('passwordInput');
            
            passwordToggle.addEventListener('click', function() {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                
                // Toggle eye icon
                const eyeIcon = this.querySelector('i');
                if (type === 'text') {
                    eyeIcon.classList.remove('fa-eye');
                    eyeIcon.classList.add('fa-eye-slash');
                } else {
                    eyeIcon.classList.remove('fa-eye-slash');
                    eyeIcon.classList.add('fa-eye');
                }
            });

            // Form validation
            const loginForm = document.getElementById('loginForm');
            const submitBtn = document.getElementById('submitBtn');

            loginForm.addEventListener('submit', function(e) {
                // Simple client-side validation
                const email = this.Email.value.trim();
                const password = this.Password.value.trim();
                let isValid = true;

                // Clear previous errors
                document.querySelectorAll('.input-field input').forEach(input => {
                    input.classList.remove('error');
                });

                // Email validation
                if (!email) {
                    showFieldError(this.Email, 'Please enter your email address');
                    isValid = false;
                } else if (!isValidEmail(email)) {
                    showFieldError(this.Email, 'Please enter a valid email address');
                    isValid = false;
                }

                // Password validation
                if (!password) {
                    showFieldError(this.Password, 'Please enter your password');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                } else {
                    // Show loading state
                    submitBtn.classList.add('loading');
                    submitBtn.innerHTML = '';
                }
            });

            // Input field focus effects
            document.querySelectorAll('input').forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });

                input.addEventListener('blur', function() {
                    this.parentElement.classList.remove('focused');
                });
            });

            // Social login buttons
            document.querySelectorAll('.social-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const platform = this.classList.contains('google') ? 'Google' : 
                                   this.classList.contains('facebook') ? 'Facebook' : 'Twitter';
                    
                    // Show temporary message
                    const originalHTML = this.innerHTML;
                    this.innerHTML = `<i class="fas fa-spinner fa-spin"></i>`;
                    this.disabled = true;
                    
                    setTimeout(() => {
                        alert(`${platform} login is coming soon!`);
                        this.innerHTML = originalHTML;
                        this.disabled = false;
                    }, 1000);
                });
            });

            // Helper functions
            function showFieldError(field, message) {
                field.classList.add('error');
                field.setAttribute('placeholder', message);
                field.value = '';
                
                // Remove placeholder after focusing
                field.addEventListener('focus', function() {
                    this.removeAttribute('placeholder');
                    this.classList.remove('error');
                }, { once: true });
            }

            function isValidEmail(email) {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return emailRegex.test(email);
            }

            // Auto-focus email field
            const emailField = document.querySelector('input[name="Email"]');
            if (emailField && !emailField.value) {
                emailField.focus();
            }

            // Add animation to form elements
            const formElements = document.querySelectorAll('.input-group, .btn, .signup-link');
            formElements.forEach((element, index) => {
                element.style.animationDelay = `${index * 0.1}s`;
                element.style.animation = 'fadeIn 0.5s ease forwards';
                element.style.opacity = '0';
            });
        });
    </script>
</body>

</html>