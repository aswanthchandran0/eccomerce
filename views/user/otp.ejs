<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <title>OTP Verification - Lexxive</title>
    <style>
        /* Reset and Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            background-image: url('https://images.unsplash.com/photo-1523381210434-271e8be1f52b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            background-blend-mode: overlay;
            background-color: rgba(255, 255, 255, 0.9);
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255, 182, 193, 0.1), rgba(216, 191, 216, 0.1));
            z-index: -1;
        }

        .container {
            width: 100%;
            max-width: 480px;
            margin: 0 auto;
            animation: fadeIn 0.8s ease;
        }

        /* OTP Card */
        .otp-card {
            background: white;
            border-radius: 20px;
            padding: 40px 35px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .otp-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #667eea, #764ba2, #667eea);
            background-size: 200% 100%;
            animation: shimmer 2s infinite linear;
        }

        /* Brand Header */
        .brand-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            margin-bottom: 15px;
            color: white;
            font-size: 24px;
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        }

        .brand-header h1 {
            color: #333;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 5px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .brand-header p {
            color: #666;
            font-size: 14px;
            font-weight: 400;
        }

        /* Title */
        .title {
            text-align: center;
            color: #444;
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .subtitle {
            text-align: center;
            color: #666;
            font-size: 15px;
            margin-bottom: 30px;
            line-height: 1.5;
        }

        .email-display {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
            border-radius: 10px;
            padding: 12px 20px;
            text-align: center;
            margin-bottom: 30px;
            border: 1px solid rgba(102, 126, 234, 0.2);
        }

        .email-display i {
            color: #667eea;
            margin-right: 8px;
        }

        .email-display span {
            color: #444;
            font-weight: 500;
            font-size: 15px;
        }

        /* OTP Input Container */
        .otp-container {
            margin: 30px 0;
        }

        .otp-inputs {
            display: flex;
            justify-content: space-between;
            gap: 15px;
            margin-bottom: 20px;
        }

        .otp-input {
            width: 60px;
            height: 70px;
            text-align: center;
            font-size: 28px;
            font-weight: 700;
            color: #333;
            background: #f8f9fa;
            border: 2px solid #e1e5e9;
            border-radius: 12px;
            outline: none;
            transition: all 0.3s ease;
        }

        .otp-input:focus {
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

        .otp-input.filled {
            border-color: #4ecdc4;
            background: rgba(78, 205, 196, 0.1);
        }

        .otp-input.error {
            border-color: #ff6b6b;
            background: #fff5f5;
            animation: shake 0.3s ease;
        }

        /* Hidden Input for Form Submission */
        .hidden-otp {
            position: absolute;
            opacity: 0;
            pointer-events: none;
        }

        /* Error Message */
        .error-message {
            background: linear-gradient(135deg, #ff6b6b, #ff8e53);
            color: white;
            padding: 12px 16px;
            border-radius: 10px;
            margin: 15px 0;
            font-size: 14px;
            text-align: center;
            animation: slideDown 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .success-message {
            background: linear-gradient(135deg, #2ecc71, #4ecdc4);
            color: white;
            padding: 12px 16px;
            border-radius: 10px;
            margin: 15px 0;
            font-size: 14px;
            text-align: center;
            animation: slideDown 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        /* Timer Section */
        .timer-section {
            text-align: center;
            margin: 25px 0;
        }

        .timer {
            font-size: 18px;
            font-weight: 600;
            color: #667eea;
            margin-bottom: 15px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .timer.expiring {
            color: #ff6b6b;
            animation: pulse 1s infinite;
        }

        /* Resend Button */
        .resend-btn {
            background: transparent;
            border: 2px solid #667eea;
            color: #667eea;
            padding: 14px 30px;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            margin-bottom: 20px;
        }

        .resend-btn:hover:not(:disabled) {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .resend-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            border-color: #ccc;
            color: #999;
        }

        /* Verify Button */
        .verify-btn {
            width: 100%;
            padding: 18px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
            position: relative;
            overflow: hidden;
            margin-bottom: 20px;
        }

        .verify-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 15px 25px rgba(102, 126, 234, 0.4);
        }

        .verify-btn:disabled {
            background: #6c757d;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .verify-btn::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .verify-btn:hover::after:not(:disabled) {
            left: 100%;
        }

        /* Home Link */
        .home-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }

        .home-link a {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #555;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            padding: 8px 16px;
            border-radius: 8px;
        }

        .home-link a:hover {
            background: #f8f9fa;
            color: #667eea;
        }

        /* Info Box */
        .info-box {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
            border-radius: 12px;
            padding: 20px;
            margin: 20px 0;
            border-left: 4px solid #667eea;
        }

        .info-title {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #667eea;
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 16px;
        }

        .info-list {
            list-style: none;
            padding-left: 0;
        }

        .info-list li {
            display: flex;
            align-items: flex-start;
            gap: 10px;
            margin-bottom: 8px;
            color: #555;
            font-size: 14px;
        }

        .info-list i {
            color: #2ecc71;
            margin-top: 3px;
            font-size: 12px;
        }

        /* Loading State */
        .btn.loading {
            pointer-events: none;
            opacity: 0.8;
        }

        .btn.loading::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 20px;
            height: 20px;
            border: 2px solid white;
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 0.8s linear infinite;
        }

        /* Animations */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes shimmer {
            0% {
                background-position: -200% 0;
            }
            100% {
                background-position: 200% 0;
            }
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        @keyframes spin {
            to {
                transform: translate(-50%, -50%) rotate(360deg);
            }
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        /* Responsive Design */
        @media (max-width: 480px) {
            .container {
                max-width: 100%;
                padding: 0 15px;
            }

            .otp-card {
                padding: 30px 25px;
            }

            .brand-header h1 {
                font-size: 24px;
            }

            .otp-input {
                width: 50px;
                height: 60px;
                font-size: 24px;
            }

            .otp-inputs {
                gap: 10px;
            }
        }

        /* Decorative Elements */
        .floating-element {
            position: absolute;
            z-index: -1;
            opacity: 0.1;
            pointer-events: none;
        }

        .circle-1 {
            width: 200px;
            height: 200px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            top: -50px;
            right: -50px;
        }

        .circle-2 {
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, #ff6b6b, #ff8e53);
            border-radius: 50%;
            bottom: -50px;
            left: -50px;
        }
    </style>
</head>

<body>
    <!-- Decorative Elements -->
    <div class="floating-element circle-1"></div>
    <div class="floating-element circle-2"></div>

    <div class="container">
        <div class="otp-card">
            <!-- Brand Header -->
            <div class="brand-header">
                <div class="logo">
                    <i class="fas fa-tshirt"></i>
                </div>
                <h1>Lexxive</h1>
                <p>Fashion Redefined</p>
            </div>

            <!-- OTP Form -->
            <form action="/otpValidation" method="post" id="otpForm">
                <h2 class="title">Verify Your Email</h2>
                <p class="subtitle">Enter the 6-digit OTP sent to your email address</p>

                <!-- Email Display -->
                <div class="email-display">
                    <i class="fas fa-envelope"></i>
                    <span><%= user && user.Email ? user.Email : 'your-email@example.com' %></span>
                </div>

                <!-- Error/Success Messages -->
                <% if (otpError) { %>
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= otpError %>
                    </div>
                <% } %>

                <!-- OTP Inputs -->
                <div class="otp-container">
                    <div class="otp-inputs" id="otpInputs">
                        <input type="text" class="otp-input" maxlength="1" data-index="1" autocomplete="off">
                        <input type="text" class="otp-input" maxlength="1" data-index="2" autocomplete="off">
                        <input type="text" class="otp-input" maxlength="1" data-index="3" autocomplete="off">
                        <input type="text" class="otp-input" maxlength="1" data-index="4" autocomplete="off">
                        <input type="text" class="otp-input" maxlength="1" data-index="5" autocomplete="off">
                        <input type="text" class="otp-input" maxlength="1" data-index="6" autocomplete="off">
                    </div>
                    <input type="hidden" name="otp" id="fullOtp" required>
                </div>

                <!-- Timer Display -->
                <div class="timer-section" id="timerSection">
                    <div class="timer" id="timer">
                        <i class="fas fa-clock"></i>
                        <span id="timeLeft">03:00</span>
                    </div>
                    <p style="color: #666; font-size: 14px; margin-top: 5px;">
                        OTP expires in <span id="minutes">3</span> minutes
                    </p>
                </div>

                <!-- Verify Button -->
                <button type="submit" class="verify-btn" id="verifyBtn" disabled>
                    <i class="fas fa-shield-check"></i>
                    Verify & Continue
                </button>

                <!-- Resend OTP -->
                <button type="button" class="resend-btn" id="resendBtn" disabled>
                    <i class="fas fa-redo"></i>
                    Resend OTP
                </button>
            </form>

            <!-- Info Box -->
            <div class="info-box">
                <div class="info-title">
                    <i class="fas fa-info-circle"></i>
                    <span>Important Information</span>
                </div>
                <ul class="info-list">
                    <li>
                        <i class="fas fa-check"></i>
                        <span>Check your email inbox (and spam folder)</span>
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        <span>Enter the 6-digit code exactly as shown</span>
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        <span>Code expires in 3 minutes for security</span>
                    </li>
                    <li>
                        <i class="fas fa-check"></i>
                        <span>Don't share this code with anyone</span>
                    </li>
                </ul>
            </div>

            <!-- Home Link -->
            <div class="home-link">
                <a href="/">
                    <i class="fas fa-home"></i>
                    Back to Home
                </a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // OTP Input Elements
            const otpInputs = document.querySelectorAll('.otp-input');
            const fullOtpInput = document.getElementById('fullOtp');
            const verifyBtn = document.getElementById('verifyBtn');
            const resendBtn = document.getElementById('resendBtn');
            const timerElement = document.getElementById('timer');
            const timeLeftElement = document.getElementById('timeLeft');
            const minutesElement = document.getElementById('minutes');
            const otpForm = document.getElementById('otpForm');

            // Timer variables
            let timeLeft = 180; // 3 minutes in seconds
            let timerInterval;
            let isTimerExpired = false;

            // Initialize OTP inputs
            function initOtpInputs() {
                otpInputs.forEach((input, index) => {
                    // Focus management
                    input.addEventListener('input', (e) => {
                        const value = e.target.value;
                        
                        // Only allow numbers
                        if (!/^\d*$/.test(value)) {
                            e.target.value = '';
                            return;
                        }
                        
                        if (value.length === 1) {
                            // Move to next input
                            if (index < otpInputs.length - 1) {
                                otpInputs[index + 1].focus();
                            }
                            
                            // Add filled class
                            e.target.classList.add('filled');
                            e.target.classList.remove('error');
                            
                            // Update full OTP
                            updateFullOtp();
                        } else if (value.length === 0 && index > 0) {
                            // Move to previous input on backspace
                            otpInputs[index - 1].focus();
                            e.target.classList.remove('filled');
                            updateFullOtp();
                        }
                    });
                    
                    // Handle paste
                    input.addEventListener('paste', (e) => {
                        e.preventDefault();
                        const pasteData = e.clipboardData.getData('text').slice(0, 6);
                        
                        // Fill all inputs with paste data
                        pasteData.split('').forEach((char, idx) => {
                            if (idx < otpInputs.length && /^\d$/.test(char)) {
                                otpInputs[idx].value = char;
                                otpInputs[idx].classList.add('filled');
                                otpInputs[idx].classList.remove('error');
                            }
                        });
                        
                        // Focus last filled input
                        const lastFilledIndex = Math.min(pasteData.length, otpInputs.length) - 1;
                        otpInputs[lastFilledIndex].focus();
                        
                        updateFullOtp();
                    });
                    
                    // Handle keydown for navigation
                    input.addEventListener('keydown', (e) => {
                        if (e.key === 'ArrowRight' && index < otpInputs.length - 1) {
                            e.preventDefault();
                            otpInputs[index + 1].focus();
                        } else if (e.key === 'ArrowLeft' && index > 0) {
                            e.preventDefault();
                            otpInputs[index - 1].focus();
                        } else if (e.key === 'Backspace' && !e.target.value && index > 0) {
                            otpInputs[index - 1].focus();
                        }
                    });
                });
            }
            
            // Update full OTP value
            function updateFullOtp() {
                const otpValue = Array.from(otpInputs).map(input => input.value).join('');
                fullOtpInput.value = otpValue;
                
                // Enable verify button if all inputs are filled
                const allFilled = otpValue.length === otpInputs.length;
                verifyBtn.disabled = !allFilled;
                
                // Update button text
                if (allFilled) {
                    verifyBtn.innerHTML = '<i class="fas fa-shield-check"></i> Verify & Continue';
                }
            }
            
            // Start countdown timer
            function startTimer() {
                clearInterval(timerInterval);
                
                timerInterval = setInterval(() => {
                    timeLeft--;
                    
                    if (timeLeft <= 0) {
                        clearInterval(timerInterval);
                        isTimerExpired = true;
                        timerElement.classList.add('expiring');
                        timeLeftElement.textContent = '00:00';
                        minutesElement.textContent = '0';
                        
                        // Enable resend button
                        resendBtn.disabled = false;
                        resendBtn.innerHTML = '<i class="fas fa-redo"></i> Resend OTP';
                    } else {
                        const minutes = Math.floor(timeLeft / 60);
                        const seconds = timeLeft % 60;
                        
                        timeLeftElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                        minutesElement.textContent = minutes;
                        
                        // Add warning class when less than 1 minute
                        if (timeLeft < 60) {
                            timerElement.classList.add('expiring');
                        }
                    }
                }, 1000);
            }
            
            // Resend OTP function
            function resendOtp() {
                if (resendBtn.disabled) return;
                
                // Reset timer
                timeLeft = 180;
                isTimerExpired = false;
                timerElement.classList.remove('expiring');
                
                // Disable resend button
                resendBtn.disabled = true;
                resendBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
                
                // Clear OTP inputs
                otpInputs.forEach(input => {
                    input.value = '';
                    input.classList.remove('filled', 'error');
                });
                updateFullOtp();
                
                // Start timer
                startTimer();
                
                // Send resend request
                fetch('/resend-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        // Show success message
                        showMessage('New OTP sent successfully! Check your email.', 'success');
                        resendBtn.innerHTML = '<i class="fas fa-check"></i> OTP Sent!';
                        
                        // Re-enable button after 30 seconds
                        setTimeout(() => {
                            resendBtn.innerHTML = '<i class="fas fa-redo"></i> Resend OTP';
                        }, 30000);
                    } else {
                        throw new Error('Failed to resend OTP');
                    }
                })
                .catch(error => {
                    console.error('Resend error:', error);
                    showMessage('Failed to resend OTP. Please try again.', 'error');
                    resendBtn.disabled = false;
                    resendBtn.innerHTML = '<i class="fas fa-redo"></i> Resend OTP';
                });
            }
            
            // Show message function
            function showMessage(message, type) {
                // Remove existing messages
                const existingMessages = document.querySelectorAll('.error-message, .success-message');
                existingMessages.forEach(msg => msg.remove());
                
                // Create new message
                const messageDiv = document.createElement('div');
                messageDiv.className = type === 'error' ? 'error-message' : 'success-message';
                messageDiv.innerHTML = `
                    <i class="fas ${type === 'error' ? 'fa-exclamation-circle' : 'fa-check-circle'}"></i>
                    ${message}
                `;
                
                // Insert after subtitle
                const subtitle = document.querySelector('.subtitle');
                subtitle.parentNode.insertBefore(messageDiv, subtitle.nextSibling);
                
                // Auto remove after 5 seconds
                setTimeout(() => {
                    if (messageDiv.parentNode) {
                        messageDiv.remove();
                    }
                }, 5000);
            }
            
            // Form submission
            otpForm.addEventListener('submit', function(e) {
                if (isTimerExpired) {
                    e.preventDefault();
                    showMessage('OTP has expired. Please request a new one.', 'error');
                    return;
                }
                
                const otpValue = fullOtpInput.value;
                if (otpValue.length !== 6) {
                    e.preventDefault();
                    showMessage('Please enter all 6 digits of the OTP.', 'error');
                    otpInputs.forEach(input => {
                        if (!input.value) {
                            input.classList.add('error');
                        }
                    });
                    return;
                }
                
                // Show loading state
                verifyBtn.disabled = true;
                verifyBtn.classList.add('loading');
                verifyBtn.innerHTML = '';
            });
            
            // Resend button click
            resendBtn.addEventListener('click', resendOtp);
            
            // Initialize
            initOtpInputs();
            startTimer();
            
            // Auto-focus first input
            otpInputs[0].focus();
            
            // Add animation to elements
            const formElements = document.querySelectorAll('.brand-header, .title, .subtitle, .email-display, .otp-container, .timer-section, .verify-btn, .resend-btn, .info-box');
            formElements.forEach((element, index) => {
                element.style.animationDelay = `${index * 0.1}s`;
                element.style.animation = 'fadeIn 0.5s ease forwards';
                element.style.opacity = '0';
            });
        });
    </script>
</body>
</html>