    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
   <script>
$(document).ready(function() {
    // Auto-show modal if there are validation errors
    <% if (validationErr && Object.keys(validationErr).length > 0) { %>
        $('#addAddressModal').modal('show');
    <% } %>
    
    // Highlight active sidebar link
    const currentPath = window.location.pathname;
    $('.sidebar-menu a').each(function() {
        if ($(this).attr('href') === currentPath) {
            $(this).addClass('active');
        }
    });
    
    // Delete address
    $('.delete-address-btn').on('click', function() {
        const addressId = $(this).data('address-id');
        const addressCard = $(this).closest('.address-card');
        
        Swal.fire({
            title: 'Delete Address?',
            text: "This address will be permanently removed!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#4361ee',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel',
            background: 'white',
            backdrop: 'rgba(0,0,0,0.5)'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/userProfile/deleteAddress',
                    method: 'POST',
                    data: { addressId: addressId },
                    success: function(response) {
                        console.log('Delete response:', response);
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Deleted!',
                                text: 'Address has been deleted.',
                                confirmButtonColor: '#4361ee',
                                background: 'white'
                            }).then(() => {
                                // Add animation before removing
                                addressCard.animate({
                                    opacity: 0,
                                    height: 0,
                                    marginBottom: 0,
                                    padding: 0
                                }, 300, function() {
                                    $(this).remove();
                                    // Reload if no addresses left
                                    if ($('.address-card').length === 0) {
                                        location.reload();
                                    }
                                });
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.error || 'Failed to delete address',
                                confirmButtonColor: '#4361ee',
                                background: 'white'
                            });
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Delete error:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'An error occurred while deleting the address',
                            confirmButtonColor: '#4361ee',
                            background: 'white'
                        });
                    }
                });
            }
        });
    });
    
    // Set as default address
    $('.set-default-btn').on('click', function() {
        const addressId = $(this).data('address-id');
        const btn = $(this);
        
        btn.html('<i class="fas fa-spinner fa-spin me-2"></i> Setting...').prop('disabled', true);
        
        $.ajax({
            url: '/userProfile/setDefaultAddress',
            method: 'POST',
            data: { addressId: addressId },
            success: function(response) {
                console.log('Set default response:', response);
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: response.message || 'Address set as default successfully',
                        confirmButtonColor: '#4361ee',
                        background: 'white'
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.error || 'Failed to set default address',
                        confirmButtonColor: '#4361ee',
                        background: 'white'
                    });
                    btn.html('<i class="fas fa-check-circle"></i> Set as Default').prop('disabled', false);
                }
            },
            error: function(xhr, status, error) {
                console.error('Set default error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred',
                    confirmButtonColor: '#4361ee',
                    background: 'white'
                });
                btn.html('<i class="fas fa-check-circle"></i> Set as Default').prop('disabled', false);
            }
        });
    });
    
    // Form validation for add address
    $('#addressForm').on('submit', function(e) {
        let isValid = true;
        
        // Clear previous error states
        $(this).find('.is-invalid').removeClass('is-invalid');
        $(this).find('.error-message').remove();
        
        // Basic validation
        $(this).find('[required]').each(function() {
            if (!$(this).val().trim()) {
                $(this).addClass('is-invalid');
                $(this).after('<div class="error-message"><i class="fas fa-exclamation-circle"></i> This field is required</div>');
                isValid = false;
            }
        });
        
        // Phone number validation
        const phoneInput = $('input[name="phoneNumber"]');
        if (phoneInput.val() && !/^[0-9]{10}$/.test(phoneInput.val())) {
            phoneInput.addClass('is-invalid');
            phoneInput.after('<div class="error-message"><i class="fas fa-exclamation-circle"></i> Please enter a valid 10-digit phone number</div>');
            isValid = false;
        }
        
        // Pincode validation
        const pincodeInput = $('input[name="pincode"]');
        if (pincodeInput.val() && !/^[0-9]{6}$/.test(pincodeInput.val())) {
            pincodeInput.addClass('is-invalid');
            pincodeInput.after('<div class="error-message"><i class="fas fa-exclamation-circle"></i> Please enter a valid 6-digit pincode</div>');
            isValid = false;
        }
        
        if (!isValid) {
            e.preventDefault();
            // Scroll to first error
            $('html, body').animate({
                scrollTop: $('.is-invalid').first().offset().top - 100
            }, 500);
        }
    });
    
    // Add hover effects to address cards
    $('.address-card').hover(
        function() {
            $(this).css('z-index', 100);
        },
        function() {
            $(this).css('z-index', 1);
        }
    );
    
    // Edit address button click - FIXED: Now properly inside document.ready
    $(document).on('click', '.edit-address-btn', function() {
        const addressId = $(this).data('address-id');
        console.log('Edit clicked for address ID:', addressId);
        
        // Find the address data from your userdata
        <% if(userdata && userdata.address) { %>
            <% userdata.address.forEach((address, index) => { %>
                if ('<%= address._id %>' === addressId) {
                    console.log('Found address to edit');
                    
                    // Populate the edit form - Use backticks for proper escaping
                    $('#editAddressId').val('<%= address._id %>');
                    $('#editEmail').val('<%= address.Email || user.Email %>');
                    $('#editRecipientName').val(`<%= address.Fname %>`);
                    $('#editPhoneNumber').val(`<%= address.PhoneNumber %>`);
                    $('#editAlternatePhone').val(`<%= address.AphoneNumber || "" %>`);
                    $('#editPincode').val(`<%= address.Pincode %>`);
                    $('#editAddress').val(`<%= address.Address %>`);
                    $('#editPlace').val(`<%= address.Place %>`);
                    $('#editState').val(`<%= address.state %>`);
                    $('#editLandmark').val(`<%= address.LandMark || "" %>`);
                    $('#editAddressType').val(`<%= address.AddressType %>`);
                    
                    // Set checkbox if address is default
                    if (<%= address.isDefault === true %>) {
                        $('#editIsDefault').prop('checked', true);
                    } else {
                        $('#editIsDefault').prop('checked', false);
                    }
                    
                    // Show the modal
                    $('#editAddressModal').modal('show');
                }
            <% }); %>
        <% } %>
    });
    
    // Edit form submission
    $('#editAddressForm').on('submit', function(e) {
        e.preventDefault();
        
        const form = $(this);
        const submitBtn = form.find('button[type="submit"]');
        const originalBtnText = submitBtn.html();
        
        // Show loading state
        submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i> Updating...').prop('disabled', true);
        
        // Clear previous validation
        form.find('.is-invalid').removeClass('is-invalid');
        form.find('.error-message').remove();
        
        // Basic validation
        let isValid = true;
        form.find('[required]').each(function() {
            if (!$(this).val().trim()) {
                isValid = false;
                $(this).addClass('is-invalid');
                $(this).after('<div class="error-message"><i class="fas fa-exclamation-circle"></i> This field is required</div>');
            }
        });
        
        // Phone number validation
        const phoneInput = form.find('input[name="phoneNumber"]');
        if (phoneInput.val() && !/^[0-9]{10}$/.test(phoneInput.val())) {
            phoneInput.addClass('is-invalid');
            phoneInput.after('<div class="error-message"><i class="fas fa-exclamation-circle"></i> Please enter a valid 10-digit phone number</div>');
            isValid = false;
        }
        
        // Pincode validation
        const pincodeInput = form.find('input[name="pincode"]');
        if (pincodeInput.val() && !/^[0-9]{6}$/.test(pincodeInput.val())) {
            pincodeInput.addClass('is-invalid');
            pincodeInput.after('<div class="error-message"><i class="fas fa-exclamation-circle"></i> Please enter a valid 6-digit pincode</div>');
            isValid = false;
        }
        
        if (!isValid) {
            Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Please correct the errors in the form',
                confirmButtonColor: '#4361ee',
                background: 'white'
            });
            submitBtn.html(originalBtnText).prop('disabled', false);
            return;
        }
        
        // Get form data - ensure checkbox value is included
        const formData = form.serialize();
        console.log('Submitting edit form data:', formData);
        
        $.ajax({
            url: form.attr('action'),
            method: 'POST',
            data: formData,
            success: function(response) {
                console.log('Edit response:', response);
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: response.message || 'Address updated successfully',
                        confirmButtonColor: '#4361ee',
                        background: 'white'
                    }).then(() => {
                        $('#editAddressModal').modal('hide');
                        location.reload(); // Reload to show updated data
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.error || 'Failed to update address',
                        confirmButtonColor: '#4361ee',
                        background: 'white'
                    });
                    submitBtn.html(originalBtnText).prop('disabled', false);
                }
            },
            error: function(xhr, status, error) {
                console.error('Edit AJAX error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while updating the address',
                    confirmButtonColor: '#4361ee',
                    background: 'white'
                });
                submitBtn.html(originalBtnText).prop('disabled', false);
            }
        });
    });
    
    // Clear form validation on modal close
    $('#editAddressModal').on('hidden.bs.modal', function() {
        $(this).find('.is-invalid').removeClass('is-invalid');
        $(this).find('.error-message').remove();
        $(this).find('form')[0].reset();
    });
});
</script>

