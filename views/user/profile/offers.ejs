    <%- include('../layout/footer.ejs') %>
    
    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <script>
        $(document).ready(function() {
            // Highlight active sidebar link
            const currentPath = window.location.pathname;
            $('.sidebar-menu a').each(function() {
                if ($(this).attr('href') === currentPath) {
                    $(this).addClass('active');
                }
            });
            
            // Initialize Bootstrap tabs
            $('.coupon-tabs a').on('click', function(e) {
                e.preventDefault();
                $(this).tab('show');
            });
            
            // Copy coupon code functionality (only for active coupons)
            $('.coupon-card:not(.expired) .copy-btn:not(:disabled)').on('click', function() {
                const couponCode = $(this).data('code');
                const originalText = $(this).text();
                
                // Copy to clipboard
                navigator.clipboard.writeText(couponCode).then(function() {
                    // Change button text and style
                    $(this).text('Copied!');
                    $(this).addClass('copied');
                    
                    // Show success message
                    Swal.fire({
                        icon: 'success',
                        title: 'Coupon Copied!',
                        text: `Coupon code "${couponCode}" copied to clipboard`,
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 2000,
                        timerProgressBar: true
                    });
                    
                    // Revert button after 2 seconds
                    setTimeout(() => {
                        $(this).text(originalText);
                        $(this).removeClass('copied');
                    }, 2000);
                }.bind(this));
            });
            
            // Show tooltip for disabled expired coupon buttons
            $('.copy-btn:disabled').hover(function() {
                $(this).attr('title', 'This coupon is no longer available');
            });
        });
    </script>
