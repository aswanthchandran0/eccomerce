<div class="modal fade" id="addToCartModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add to Cart</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            
            <div class="modal-body text-center">
                <img id="modal-product-image" src="" class="img-fluid mb-3" style="max-height:200px;">
                <h5 id="modal-product-name"></h5>
                <p id="modal-product-category" class="text-muted mb-1"></p>
                <h4 id="modal-product-price" class="text-success mb-3"></h4>
                
