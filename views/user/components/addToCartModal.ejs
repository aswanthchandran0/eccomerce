                    </div>
                    <p id="modal-size-error" class="text-danger" style="display: none; font-size: 14px;">
                        Please select a size
                    </p>
                </div>
                
                <!-- Stock Status -->
                <p id="modal-stock-status" class="mb-3"></p>
                
                <!-- Quantity Selection -->
                <div class="quantity-container mb-4" style="display: none;">
