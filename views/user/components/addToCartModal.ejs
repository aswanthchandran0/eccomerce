                    <div class="quantity-input d-inline-flex align-items-center border rounded">
                        <button type="button" class="btn qty-btn minus border-end">-</button>
                        <input type="number" id="modal-quantity" 
                               class="form-control text-center border-0" 
                               value="1" min="1" style="width: 60px;">
                        <button type="button" class="btn qty-btn plus border-start">+</button>
                    </div>
                    <p id="modal-max-quantity" class="text-muted small mt-2"></p>
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" id="modal-confirm-add" class="btn btn-success">
                    <i class="icon-shopping-cart mr-2"></i>Add to Cart
                </button>
            </div>
        </div>
    </div>
</div>


