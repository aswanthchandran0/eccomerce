<%- include('./layout/header.ejs') -%>
<style>
    .col-lg-9::-webkit-scrollbar {
        width: 0;
        background: transparent;
    }
    .input-group {
        width: 120px;
    }
    .btn-remove {
        background: none;
        border: none;
        color: #dc3545;
        cursor: pointer;
    }
    .btn-remove:hover {
        color: #bd2130;
    }
</style>

<div class="page-wrapper">
    <%- include('./layout/navBar.ejs')-%>
    <main class="main">
        <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">Shopping Cart<span>Shop</span></h1>
            </div>
        </div>

        <nav aria-label="breadcrumb" class="breadcrumb-nav">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/productList">Shop</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
                </ol>
            </div>
        </nav>

        <div class="page-content" id="entireDiv">
            <div class="cart">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-9" style="overflow: auto; max-height: 80vh;">
                            <% if(products && products.length > 0) { %>
                                <table class="table table-cart table-mobile">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% products.forEach((product) => { %>
                                            <tr id="product-<%= product._id %>">
                                                <td class="product-col">
                                                    <div class="product">
                                                        <figure class="product-media">
                                                            <a href="/productView?id=<%= product._id %>">
                                                                <img src="<%= product.images[0] %>" alt="<%= product.name %>" style="width: 80px; height: 80px; object-fit: cover;">
                                                            </a>
                                                        </figure>
                                                        <h3 class="product-title">
                                                            <a href="/productView?id=<%= product._id %>"><%= product.name %></a>
                                                        </h3>
                                                        <% if(product.category) { %>
                                                            <div class="product-cat">
                                                                <small class="text-muted"><%= product.category.name %></small>
                                                            </div>
                                                        <% } %>
                                                    </div>
                                                </td>
                                                
                                                <td class="price-col">₹<span id="price-<%= product._id %>"><%= product.price %></span></td>
                                                
                                                <td class="quantity-col">
                                                    <div class="cart-product-quantity">
                                                        <div class="input-group input-spinner">
                                                            <div class="input-group-prepend">
                                                                <button style="min-width: 26px" class="btn btn-decrement btn-spinner" type="button" onclick="updateQuantity(-1, '<%= product._id %>', '<%= product.price %>')">
                                                                    <i class="icon-minus"></i>
                                                                </button>
                                                            </div>
                                                            <input type="text" style="text-align: center; width: 50px;" class="form-control quantity-input" id="quantity-<%= product._id %>" value="<%= product.quantity %>" readonly>
                                                            <div class="input-group-append">
                                                                <button style="min-width: 26px" class="btn btn-increment btn-spinner" type="button" onclick="updateQuantity(1, '<%= product._id %>', '<%= product.price %>')">
                                                                    <i class="icon-plus"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                
                                                <td class="total-col">
                                                    ₹<span id="total-<%= product._id %>"><%= (product.price * product.quantity).toFixed(2) %></span>
                                                </td>
                                                
                                                <td class="remove-col">
                                                    <button class="btn-remove" onclick="removeFromCart('<%= product._id %>')">
                                                        <i class="icon-close"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            <% } else { %>
                                <div class="empty-cart text-center py-5">
                                    <i class="icon-shopping-cart" style="font-size: 4rem; color: #ddd;"></i>
                                    <h3 class="mt-3">Your cart is empty</h3>
                                    <p class="text-muted">Add some products to your cart</p>
                                    <a href="/productList" class="btn btn-primary mt-3">Continue Shopping</a>
                                </div>
                            <% } %>
                        </div>

                        <% if(products && products.length > 0) { %>
                            <aside class="col-lg-3">
                                <div class="summary summary-cart">
                                    <h3 class="summary-title">Cart Total</h3>
                                    
                                    <table class="table table-summary">
                                        <tbody>
                                            <tr class="summary-subtotal">
                                                <td>Subtotal:</td>
                                                <td id="subtotal-amount">₹<%= totalPrice %></td>
                                            </tr>
                                            
                                            <tr class="summary-shipping">
                                                <td>Shipping:</td>
                                                <td>&nbsp;</td>
                                            </tr>
                                            
                                            <tr class="summary-shipping-row">
                                                <td onclick="updateShipping(0)">
                                                    <div class="custom-control custom-radio">
                                                        <input type="radio" id="free-shipping" name="shipping" class="custom-control-input" checked>
                                                        <label class="custom-control-label" for="free-shipping">Free Shipping</label>
                                                    </div>
                                                </td>
                                                <td>₹0.00</td>
                                            </tr>
                                            
                                            <tr class="summary-shipping-row">
                                                <td onclick="updateShipping(10)">
                                                    <div class="custom-control custom-radio">
                                                        <input type="radio" id="standard-shipping" name="shipping" class="custom-control-input">
                                                        <label class="custom-control-label" for="standard-shipping">Standard:</label>
                                                    </div>
                                                </td>
                                                <td>₹10.00</td>
                                            </tr>
                                            
                                            <tr class="summary-shipping-row">
                                                <td onclick="updateShipping(20)">
                                                    <div class="custom-control custom-radio">
                                                        <input type="radio" id="express-shipping" name="shipping" class="custom-control-input">
                                                        <label class="custom-control-label" for="express-shipping">Express:</label>
                                                    </div>
                                                </td>
                                                <td>₹20.00</td>
                                            </tr>
                                            
                                            <tr class="summary-total">
                                                <td>Total:</td>
                                                <td id="final-total">₹<%= finalTotal %></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    
                                    <a href="/cart/processToCheckout" class="btn btn-outline-primary-2 btn-order btn-block">PROCEED TO CHECKOUT</a>
                                </div>
                                
                                <a href="/productList" class="btn btn-outline-dark-2 btn-block mb-3 mt-3">
                                    <span>CONTINUE SHOPPING</span>
                                    <i class="icon-refresh"></i>
                                </a>
                            </aside>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>

<!-- Mobile Menu -->
<%- include('./layout/navBarMobile.ejs') %>
<%- include('./layout/footer.ejs') %>

<script src="assets/js/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    let currentShipping = 0;
    
    function updateQuantity(change, productId, price) {
        const currentQuantity = parseInt($(`#quantity-${productId}`).val());
        const newQuantity = currentQuantity + change;
        
        if (newQuantity < 1) return;
        
        // Show loading
        $(`#quantity-${productId}`).val('...');
        
        $.ajax({
            url: `/cart/updatePrice/${change}/${productId}/${price}`,
            method: 'GET',
            success: function(response) {
                if (response.success) {
                    // Update quantity input
                    $(`#quantity-${productId}`).val(response.quantity);
                    
                    // Update product total
                    $(`#total-${productId}`).text(response.newPrice);
                    
                    // Update cart totals
                    $('#subtotal-amount').text('₹' + response.subtotal);
                    
                    // Update shipping if needed
                    const newShipping = parseFloat(response.subtotal) > 1000 ? 0 : currentShipping;
                    const finalTotal = parseFloat(response.subtotal) + newShipping;
                    
                    $('#final-total').text('₹' + finalTotal.toFixed(2));
                    
                    // Update cart count in header
                    updateCartCount();
                    
                } else if (response.insufficientStock) {
                    // Reset quantity
                    $(`#quantity-${productId}`).val(currentQuantity);
                    
                    Swal.fire({
                        icon: 'warning',
                        title: 'Stock Limit',
                        text: response.message,
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 2000
                    });
                } else if (response.notLoggedIn) {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Login Required',
                        text: 'Please login to update cart',
                        showCancelButton: true,
                        confirmButtonText: 'Login',
                        cancelButtonText: 'Cancel'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = '/login';
                        } else {
                            $(`#quantity-${productId}`).val(currentQuantity);
                        }
                    });
                } else {
                    $(`#quantity-${productId}`).val(currentQuantity);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.error || 'Failed to update quantity',
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 2000
                    });
                }
            },
            error: function() {
                $(`#quantity-${productId}`).val(currentQuantity);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Network error. Please try again.',
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 2000
                });
            }
        });
    }
    
    function removeFromCart(productId) {
        Swal.fire({
            title: 'Remove Item',
            text: 'Are you sure you want to remove this item from cart?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, remove it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: `/deleteCart?id=${productId}`,
                    method: 'GET',
                    success: function(response) {
                        if (response.success) {
                            // Remove the row from table
                            $(`#product-${productId}`).remove();
                            
                            // Update totals
                            $('#subtotal-amount').text('₹' + response.subtotal);
                            $('#final-total').text('₹' + response.total);
                            
                            // Update cart count
                            updateCartCount();
                            
                            // If cart is empty, reload page
                            if (response.isEmpty) {
                                location.reload();
                            }
                            
                            Swal.fire({
                                icon: 'success',
                                title: 'Removed!',
                                text: 'Item removed from cart',
                                toast: true,
                                position: 'top-end',
                                showConfirmButton: false,
                                timer: 2000
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.error || 'Failed to remove item',
                                toast: true,
                                position: 'top-end',
                                showConfirmButton: false,
                                timer: 2000
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Network error. Please try again.',
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 2000
                        });
                    }
                });
            }
        });
    }
    
    function updateShipping(value) {
        currentShipping = value;
        
        // Update radio buttons
        $('input[name="shipping"]').prop('checked', false);
        if (value === 0) {
            $('#free-shipping').prop('checked', true);
        } else if (value === 10) {
            $('#standard-shipping').prop('checked', true);
        } else if (value === 20) {
            $('#express-shipping').prop('checked', true);
        }
        
        // Calculate new total
        const subtotalText = $('#subtotal-amount').text().replace('₹', '');
        const subtotal = parseFloat(subtotalText) || 0;
        const shipping = subtotal > 1000 ? 0 : currentShipping;
        const finalTotal = subtotal + shipping;
        
        $('#final-total').text('₹' + finalTotal.toFixed(2));
        
        // Save shipping preference
        $.ajax({
            url: '/cart/shippingPrice',
            method: 'POST',
            data: JSON.stringify({ shippingValue: value }),
            contentType: 'application/json',
            success: function(response) {
                console.log('Shipping updated:', response);
            }
        });
    }
    
    function updateCartCount() {
        $.ajax({
            url: '/getCartCount',
            method: 'GET',
            success: function(response) {
                if (response.success && response.count > 0) {
                    let cartCountElement = $('.cart-count');
                    if (cartCountElement.length === 0) {
                        $('.dropdown.cart-dropdown a').append('<span class="cart-count"></span>');
                        cartCountElement = $('.cart-count');
                    }
                    cartCountElement.text(response.count).show();
                } else {
                    $('.cart-count').hide();
                }
            }
        });
    }
    
    // Initialize shipping based on subtotal
    $(document).ready(function() {
        const subtotalText = $('#subtotal-amount').text().replace('₹', '');
        const subtotal = parseFloat(subtotalText) || 0;
        
        if (subtotal > 1000) {
            updateShipping(0);
        } else {
            updateShipping(0); // Default to free shipping
        }
    });
</script>