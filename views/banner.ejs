    <script>
      var btn = document.getElementById('addButton');
    
      btn.onclick = async function () {
        const { value: file, dismiss } = await Swal.fire({
          title: "Banner",
          html:
            '<input type="text" id="input1" class="swal2-input" placeholder="sub Text">' +
            '<input type="text" id="input2" class="swal2-input" placeholder="Main Text">' +
            '<input type="text" id="input3" class="swal2-input" placeholder="sub Text">' +
            '<input type="text" id="input4" class="swal2-input" placeholder="button Text">' +
            '<input style="width:65%" type="file" id="fileInput" accept="image/*" aria-label="Upload your profile picture" class="swal2-input">',
          focusConfirm: false,
          preConfirm: () => {
            return [
              document.getElementById('fileInput').files[0],
              document.getElementById('input1').value,
              document.getElementById('input2').value,
              document.getElementById('input3').value,
              document.getElementById('input4').value,
            ];
          },
          customClass: {
            popup: 'custom-swal-popup',
            content: 'custom-swal-content',
            confirmButton: 'custom-swal-confirm-button'
          }
        });
    
        if (file) {
          const [imageFile, subtext1, mainText, subText2, buttonText] = file;
          const formData = new FormData()
          formData.append('image', imageFile)
          formData.append('subText1', subtext1);
          formData.append('mainText', mainText);
          formData.append('subText2', subText2);
          formData.append('buttonText', buttonText);

          fetch('/banner/upload-image', {
            method: 'POST',
            body: formData
          }).then(response => response.json())
            .then(data => {
              console.log('Server Response:', data);
            })
            .catch(error => {
              console.error('Error:', error);
            });
    
          const reader = new FileReader();
          reader.onload = (e) => {
            Swal.fire({
              title: "Your uploaded picture",
              imageUrl: e.target.result,
              imageAlt: "The uploaded picture",
              customClass: {
                container: 'custom-swal-container'
              }
            });
          };
          reader.readAsDataURL(imageFile);
        } else if (dismiss === Swal.DismissReason.cancel) {
          console.log('cancelled');
        }
      }
    </script>
    
