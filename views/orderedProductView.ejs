<!doctype html>
<html lang="en">
  <head>
  	<title>Lexxive</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
		
		<link rel="stylesheet" href="/orderPage/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/orderPage/css/owl.theme.default.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/4.5.6/css/ionicons.min.css">
		<link rel="stylesheet" href="/orderPage/css/style.css">
  </head>
  <body>
		
		<section class="ftco-section">
			<div class="container">
				<div class="row">
					<div class="col-md-12 text-center">
						<h2 class="heading-section mb-5">Ordered Products</h2>
					</div>
					<div class="col-md-12">
						<div class="featured-carousel owl-carousel">
							<% if(orderInfo !== null && orderInfo !== undefined){%>
								<% orderInfo.productDetails.forEach((product)=>{%>
							<div class="item">
								<div class="work-wrap d-md-flex">
									<div class="img order-md-last" style="background-image: url(/<%=product.productId.images[0]%>);"></div>
									<div class="text text-left text-lg-right p-4 px-xl-5 d-flex align-items-center">
										<div class="desc w-100">
											<h2 class="mb-4"><%= product.productId.ProductName %><br></h2>
											<p class="h3"><%= product.productId.ProductDiscription %></p>
											<p class="h4">Brand: <%= product.productId.Brand %></p>
											<p class="h5">Price: ₹<%= product.productId.ProductPrice %></p>
											<p class="h5 mb-4">Shipping Charge: ₹<%=orderInfo.shippingPrice %></p>
											<p class="h5 mb-4">purchaced count: <%=product.purchasedCount %></p>
											<p class="h5 mb-4">payment Method: <%=orderInfo.paymentMethod %></p>
											<div class="row justify-content-end">
												<div class="col-xl-8">
													<p></p>
												</div>
											</div>
											<p>
												<a href="/orderDetails"><button type="button" class="btn btn-outline-dark mb-2 py-3 px-4">Back</button></a>
											</p>
										</div>
									</div>
								</div>
							</div>
							<%}) %>
							<%} %>
						</div>
					</div>
					
				</div>
			</div>
		</section>

    <script src="/orderPage/js/jquery.min.js"></script>
    <script src="/orderPage/js/popper.js"></script>
    <script src="/orderPage/js/bootstrap.min.js"></script>
    <script src="/orderPage/js/owl.carousel.min.js"></script>
    <script src="/orderPage/js/main.js"></script>
  </body>
</html>