    $(document).ready(function () {
       
        $('#couponForm').hide();

       
        $('#addCouponLink').click(function () {
            $('#couponForm').toggle();
        });
        $('#couponForm').submit(function () {
          
        });
    });
</script>
<script src="/assets/js/pagination.js"></script>
       
    


    <%- include('./layout/footer')-%>