<%- include('./layout/header.ejs')-%>

    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
    <%- include('./layout/sideBar.ejs') -%>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
      
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
           
            <div class="row">
             
              <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                      <h4 class="card-title mb-1">Edit User</h4>
                      <p class="text-muted mb-1"></p>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="preview-list">
                          <!---->
                          <form class="forms-sample" action="/admin/userDetails/edit/<%=user._id%>" method="post">
                            <div class="form-group" style="margin-top: 3%;">
                              <label for="exampleInputUsername1">Username</label>
                             
                              <% if(errors && errors.Fname){%>
                                <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Username" name="Fname" value="">
                                <p style="color: tomato;">please enter a name</p>
                                <%}else{%>
                                  <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Username" name="Fname" value="<%= user.Fname %>">
                                  <%} %>
                            </div>
                            <div class="form-group">
                              <label for="exampleInputEmail1">Email address</label>
                              
                              <% if(errors && errors.Email){%>
                                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="Email" value="">
                                <p style="color: tomato;"><%=errors.Email %></p>
                                <%}else{%>
                                  <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="Email" value="<%=user.Email %>">
                                  <%} %>
                           
                            </div>
                            <div class="form-group">
                              <label for="exampleInputPassword1">Phone Number</label>
                             
                           
                              <% if(errors && errors.PhoneNumber){%>
                                <input type="number" class="form-control" id="exampleInputPassword1" placeholder="PhoneNumber" name="PhoneNumber" value="">
                                <p style="color: tomato;"><%=errors.PhoneNumber %></p>
                                <%}else{%>
                                  <input type="number" class="form-control" id="exampleInputPassword1" placeholder="PhoneNumber" name="PhoneNumber" value="<%=user.PhoneNumber %>">
                                  <%} %>

                            <div class="form-check form-check-flat form-check-primary">
                              
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Save</button>
                            <button  type="button" class="btn btn-dark" id="cancelBtn">Cancel</button>
                          </form>
                          
                            
                               
            
                         <!---->

                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
           
           


          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
         
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
      document.addEventListener("DOMContentLoaded", function() {
          const cancelBtn = document.getElementById("cancelBtn");
          cancelBtn.addEventListener("click", function() {
              window.location.href = "/admin/userDetails"; // Redirect to the user details page
          });
      });
  </script>




