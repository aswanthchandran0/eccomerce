<script>
function confirmDelete(productId, productName) {
  console.log('Delete function called with productId:', productId);

  Swal.fire({
    title: 'Delete Confirmation',
    text: `Are you sure you want to delete ${productName}?`,
    showCancelButton: true,
    confirmButtonColor: '#f44336',
    cancelButtonColor: '#2196f3',
    confirmButtonText: 'Yes, delete it!',
    customContainerClass: 'custom-swal',
    customClass: {
      popup: 'custom-swal-popup',
      content: 'custom-swal-content',
      confirmButton: 'custom-swal-confirm-button'
    }
  }).then((result) => {
    if (result.isConfirmed) {
      // Use the data-product-id attribute to select the form
      const deleteForm = document.querySelector(`form[data-product-id="${productId}"]`);
      
      if (deleteForm) {
        deleteForm.submit();
      } else {
        console.error('Form not found.');
      }
    }
  });
}

</script>


