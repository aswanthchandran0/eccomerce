<script>
 function download() {
  const printableContent = document.getElementById('printableContent').innerHTML;
  const printWindow = window.open('', '_blank');
  printWindow.document.write('<html><head><title>Print</title>');
  printWindow.document.write('<link rel="stylesheet" type="text/css" href="path/to/print-styles.css">');
  printWindow.document.write('</head><body>');
  printWindow.document.write(printableContent);
  printWindow.document.write('</body></html>');
  printWindow.document.close();
  printWindow.print();
  removePrintStyles();
}

</script>

<script>
  function sentToserver(){
          const selectedValue = document.getElementById('filterDropdown').value
          const totalPriceElement = document.getElementById('totalPrice');
          console.log(totalPriceElement)
          $.ajax({
            url:`/admin/salesfilter?value=${selectedValue}`,
            method:'GET',
            success: function(response){
              
              const orderTableBody = document.getElementById('orderTableBody');
              orderTableBody.innerHTML = '';

              if(response.filteredOrders && response.filteredOrders.length > 0) {
        response.filteredOrders.forEach((order, index) => {

          const orderDate = order.orderDate instanceof Date ? order.orderDate : new Date(order.orderDate);
          const row = `
            <tr>
              <td>${index + 1}</td>
              <td>${order._id}</td>
              <td>${orderDate.toLocaleDateString()}</td>
              <td>${order.orderStatus}</td>
              <td>${order.paymentMethod}</td>
              <td>₹${order.Total}</td>
            </tr>
          `;
          orderTableBody.innerHTML += row;
          
        });
      }
      
      totalPriceElement.innerText = `Total: ₹${response.totalPrice}`;
    
            }
          })
  }
</script>
